{
  "mcpServers": {
    "smartsheet": {
      "transport": "stdio",
      "enabled": true,
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://localhost:8787/sse",
        "--header",
        "authToken: ${AUTH_TOKEN}",
        "--header",
        "baseUrl: ${BASE_URL}"
      ],
      "env": {
        "AUTH_TOKEN": "YOUR_SMARTSHEET_API_KEY",
        "BASE_URL": "https://api.smartsheet.com/2.0"
      },
      "url": null
    }
  }
}